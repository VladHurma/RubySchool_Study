<h1><strong>Заказы</strong></h1>
<table class="table table-hover">
  <thead>	
  	<tr>
  		<th>#</th>
  		<th>Имя</th>
  		<th>Телефон</th>
  		<th>Дата и время</th>
  		<th>Мастер</th>
  		<th>Подтверждаем мастера</th>
      <th>Цвет покраски волос</th>
  	</tr>
  </thead>

  	<tbody>
  	<tr>
  	<% i = 0 %>
  		<% @logfile.each_line do |line| %>
  			<% if line.strip == "Z" %>
  			<% i+= 1 %>
  			</tr></tr><th scope="row"><%= i %></th>
  			<% else %>
  			<td><%= line %></td>
  			<% end %>
		<% end %>
 		</tr>
	</tbody>
</table>